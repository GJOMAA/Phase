; Test case for the 2D flat plate

CaseName FlatPlate2D

Solver
{
	type "poisson"
	timeStep 1
	maxTime 1
	maxCo 1
}

LinearAlgebra
{
	phiEqn
	{
		lib eigen
	}
}

Properties
{
	gamma 1
}

Grid
{
	type rectilinear
	nCellsX 2400
	nCellsY 1500

	; Rectilinear parameters
	width 1
	height 1
}

Viewer
{
	type tecplot
	vectorFields
	scalarFields phi
}
