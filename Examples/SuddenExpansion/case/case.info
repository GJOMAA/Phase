; Test case for the 2D sudden expansion

CaseName SuddenExpansion2D

Solver
{
	type "fractional step incremental"
	timeStep 0.1
	maxTime 10
	maxCo 0.8
}

LinearAlgebra
{
  uEqn
  {
    lib eigen
  }

  pEqn
  {
    lib eigen
  }

  pCorrEqn
  {
    lib eigen
  }
}

Properties
{
	rho 1
	mu 1.e-2
	g (0,0)
	gamma 0.001
}

Grid
{
	type cgns
	filename "case/SuddenExpansionMesh.cgns"
	origin (0.25,0)
}

Viewer
{
  type tecplot
  vectorFields u,gradP,gradPhi
  scalarFields p
}

System
{
  fileWriteFrequency 10
}
