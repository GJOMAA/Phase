; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	type "fractional step multiphase"
	timeStep 3e-5
	maxCo 0.3
	maxTime 0.2

	smoothingKernelRadius 0.0001
	surfaceTensionModel CELESTE
}

LinearAlgebra
{
  uEqn
  {
    lib eigen
  }

  pCorrEqn
  {
    lib eigen
  }
  
  pEqn
  {
    lib eigen
  }

  gammaEqn
  {
    lib eigen
  }
}

Properties
{
	rho1 1
	rho2 998
 	mu1 1e-3
	mu2 8.94e-4
	sigma 0.07262
	g (0,-9.8065)
}

Grid
{
	type rectilinear
	nCellsX 100
	nCellsY 50
	width 0.005
	height 0.0025
}

Viewer
{
	type tecplot
	vectorFields u,n,ft,gradrho,sg,us
	scalarFields p,m,gamma,rho,mu,kappa
}
