; Test case for the 2D falling droplet

CaseName FallingDroplet2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1e-4
	maxCo 0.3
	maxTime 0.2

	momentumRelaxation 1
	pressureCorrectionRelaxation 1
	numInnerIterations 1
	numPressureCorrections 2

	smoothingKernelRadius 0.0001
	surfaceTensionModel CELESTE
}

LinearAlgebra
{
  uEqn
  {
    lib hypre
    maxIterations 50
    tolerance 1e-4
    iluFill 0
    maxPreconditionerUses 10
  }

  pCorrEqn
  {
    lib hypre
    maxIterations 500
    tolerance 1e-4
    iluFill 4
    maxPreconditionerUses 10
  }
  
  pEqn
  {
    lib hypre
    maxIterations 500
    tolerance 1e-4
    iluFill 4
    maxPreconditionerUses 1
  }

  gammaEqn
  {
    lib hypre
    maxIterations 20
    tolerance 1e-4
    iluFill 0
    maxPreconditionerUses 10
  }
}

Properties
{
	rho1 750
	rho2 998
 	mu1 9e-3
	mu2 8.94e-4
	sigma 0.0262
	g (0,-9.8065)

	advancingContactAngle 90
	recedingContactAngle 90
}

Grid
{
	type rectilinear
	nCellsX 100
	nCellsY 50
	width 0.005
	height 0.0025
	partitionBufferWidth 2
}

Viewer
{
	type tecplot
	vectorFields u,n,ft,gradRho
	scalarFields p,m,gamma,rho,mu,kappa
}

Integrators
{
  VolumeIntegrators
  {
    fields gamma
    cellGroups fluid
  }
}

System
{
  fileWriteFrequency 100
  consoleOutputFrequency 1
}
