; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
        type "fractional step"
	timeStep 5e-3
	maxCo 1
	maxTime 200
	smoothingKernelRadius 0
}

LinearAlgebra
{
	uEqn
	{
		lib eigen
	}

	pEqn
	{
		lib eigen
	}
}

Properties
{
	rho 1
	mu 0.01 ; Re = 100
	g (0,0)
	sigma 0
}

Grid
{
	type rectilinear
	nCellsX 300
	nCellsY 150

	; Rectilinear parameters
	width 10
	height 5
	minBufferWidth 0.05

	;refineX (1,3)
	;refineY (1.5,3.5)
}

Viewer
{
	vectorFields u,us,fb
	scalarFields p,divU
	integerFields cellStatus
}
