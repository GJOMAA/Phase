; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 5e-3
	maxCo 0.6
	maxTime 200

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 1
	smoothingKernelRadius 0.0401
}

LinearAlgebra
{
	uEqn
	{
		lib trilinos
		solver BiCGSTAB
		iluFill 1
		maxPreconditionerUses 1
		tolerance 1e-12
	}

	pEqn
	{
		lib trilinos
		solver BiCGSTAB
		iluFill 4
		maxPreconditionerUses 1
		tolerance 1e-12
	}
}

Properties
{
	rho 1
	mu 0.01 ; Re = 100
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 200
	nCellsY 100

	; Rectilinear parameters
	width 10
	height 5
	partitionBufferWidth 4

	refineX (1,3)
	refineY (1.5,3.5)
}

Viewer
{
	vectorFields u,us
	scalarFields p,phi
	integerFields cellStatus
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
