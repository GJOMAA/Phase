; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 3.5e-3
	maxCo 0.5
	maxTime 200

	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 1
}

LinearAlgebra
{
	uEqn
	{
		lib eigen
		iluFill 0
		tolerance 1e-10
	}

	pEqn
	{
		lib eigen
		iluFill 4
		tolerance 1e-10
	}
}

Properties
{
	rho 1
	mu 0.01 ; Re = 100
	g (0,0)
}

Grid
{
	type rectilinear
	nCellsX 400
	nCellsY 200

	; Rectilinear parameters
	width 10
	height 5
	partitionBufferWidth 3

	refineX (1,3)
	refineY (1.5,3.5)
}

Viewer
{
	vectorFields u,us
	scalarFields p,phi
	integerFields cellStatus
}

System
{
  fileWriteFrequency 30
  consoleOutputFrequency 1
}
