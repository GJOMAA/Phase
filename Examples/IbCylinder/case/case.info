; Test case for the 2D immersed boundary cylinder

CaseName ImmersedBoundaryCylinder2D

Solver
{
	timeDependent On
	maxIterations 100
	timeStep 1.5e-3
	maxCo 0.5
	maxTime 200
	smoothingKernelRadius 0
	momentumRelaxation 1
	pressureCorrectionRelaxation 0.5
	numInnerIterations 2
	numPressureCorrections 1
}

LinearAlgebra
{
	uEqn
	{
		lib trilinos
		iluFill 0
		tolerance 1e-14
		schwarzIters 1
	}

	pEqn
	{
		lib trilinos
		solver TFQMR
		iluFill 4
		tolerance 1e-14
		schwarzIters 2
		combineMode ADD
		schwarzOverlap 0
	}
}

Properties
{
	rho 1
	mu 0.01 ; Re = 100
	g (0,0)
	sigma 0
}

Grid
{
	type rectilinear
	nCellsX 300
	nCellsY 150

	; Rectilinear parameters
	width 10
	height 5
	minBufferWidth 0.05

	refineX (1,3)
	refineY (1.5,3.5)
}

Viewer
{
	vectorFields u,us
	scalarFields p,phi
	integerFields cellStatus
}

System
{
  fileWriteFrequency 10
  consoleOutputFrequency 1
}
